@model dynamic
<div class="w-full flex gap-16 portrait:flex-col">

    <div class="w-full flex items-center portrait:justify-center">
      
        <div class="w-72 h-72 bg-white rounded-xl border-2 flex justify-center items-center">
        @if (Model.imageSrc != null)
        {
            <img src="@Model.imageSrc" />
        }
        else
        {
            <div>Coming soon...</div>
        }
            </div> 
    </div>

    <div class="w-full flex flex-col justify-center gap-8">

        @await Component.InvokeAsync("SectionTitle", Model.title)

        @if (Model.textArea != null)
        {
            <div>@Model.textArea</div>
        }
        @if (Model.liveLink != null)
        {
            <a class="self-start text-blue-500 underline underline-offset-2 flex gap-2 justify-center items-center" href="@Model.liveLink">            
                <div>See Live Project</div>
                <svg fill="#3b82f6" height="15" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"> 
                    <path d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"/>
                </svg>
            </a>
        }
        @if (Model.sourceLink != null)
        {
             <a class="self-start text-blue-500 underline underline-offset-2 flex gap-2 justify-center items-center" href="@Model.sourceLink">            
                <div>See Source Code</div>
                <svg fill="#3b82f6" height="15" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512">
                <path d="M392.8 1.2c-17-4.9-34.7 5-39.6 22l-128 448c-4.9 17 5 34.7 22 39.6s34.7-5 39.6-22l128-448c4.9-17-5-34.7-22-39.6zm80.6 120.1c-12.5 12.5-12.5 32.8 0 45.3L562.7 256l-89.4 89.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l112-112c12.5-12.5 12.5-32.8 0-45.3l-112-112c-12.5-12.5-32.8-12.5-45.3 0zm-306.7 0c-12.5-12.5-32.8-12.5-45.3 0l-112 112c-12.5 12.5-12.5 32.8 0 45.3l112 112c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L77.3 256l89.4-89.4c12.5-12.5 12.5-32.8 0-45.3z"/>
                </svg>
            </a>
        }
    </div>

</div>