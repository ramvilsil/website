<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @if (ViewBag.Title != null)
    {
        <title>Ramon's @ViewBag.Title</title>
    }
    else
    {
        <title>Ramon's Website</title>
    }


    @* <script src="https://cdn.tailwindcss.com"></script> *@

    <link href="~/css/site.css?v=1.0.8" rel="stylesheet">
    <link href="~/css/custom.css?v=1.0.8" rel="stylesheet">
    <link href="~/css/markdown-content.css?v=1.0.8" rel="stylesheet" />

</head>

<body class="flex flex-col items-center">

    <nav
        class="portrait:hidden w-11/12 fixed m-4 p-2 pl-8 pr-8 flex items-center justify-center bg-white rounded-full text-lg border-black shadow-md">
        <div class="flex items-center gap-16">
            @foreach (var menuItem in new[] { ("Blog"), ("Projects"), ("About") })
            {
                bool isActiveMenuItem = ViewContext.RouteData.Values["action"].ToString() == menuItem;

                <a asp-controller="Home" asp-action="@menuItem"
                    class='font-bold underline-offset-4 @(isActiveMenuItem ? "opacity-100 underline" : "opacity-60")'>@menuItem</a>
            }
        </div>
    </nav>

    <nav
        class="landscape:hidden w-11/12 fixed flex justify-end items-center rounded-full bg-white border-black p-4 pl-8 pr-8 m-4 shadow-md">

        <div onclick="toggleSidebar()" class="w-max flex">
            <svg height="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path
                    d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z" />
            </svg>
        </div>

    </nav>

